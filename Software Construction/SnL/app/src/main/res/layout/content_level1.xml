<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/level1Board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player1ValueLevel1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/board" />

    <TextView
        android:id="@+id/player1ValueLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/player2ValueLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player1ValueLevel1"
        android:layout_marginLeft="106dp"
        android:layout_marginStart="106dp"
        android:layout_toEndOf="@+id/player1ValueLevel1"
        android:layout_toRightOf="@+id/player1ValueLevel1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/diceThrowLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Roll"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/diceImageLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@null" />

    <TextView
        android:id="@+id/playerTurnLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level1Board"
        android:layout_toEndOf="@+id/player2ValueLevel1"
        android:layout_toRightOf="@+id/player2ValueLevel1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level1Board"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3Level1"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:src="@drawable/p1" />


        <TextView
            android:id="@+id/textView2Level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView4Level1"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:src="@drawable/p2" />

        <TextView
            android:id="@+id/textView3Level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>

    <ImageView
        android:id="@+id/player1PositionLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diceThrowLevel1"
        android:layout_alignEnd="@+id/diceThrowLevel1"
        android:layout_alignRight="@+id/diceThrowLevel1"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:src="@drawable/p1"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/player2PositionLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diceThrowLevel1"
        android:layout_alignEnd="@+id/diceThrowLevel1"
        android:layout_alignRight="@+id/diceThrowLevel1"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:src="@drawable/p2"
        android:visibility="invisible" />


</RelativeLayout>
