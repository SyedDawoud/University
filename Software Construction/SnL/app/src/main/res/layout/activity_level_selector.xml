<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dawoudaliapp.snl.LevelSelector">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select Level"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_gravity="center_horizontal"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/dice1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_gravity="center_horizontal"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/dice2" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_below="@+id/imageButton2"
        android:layout_gravity="center_horizontal"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/dice3" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/dice4" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/dice5" />
</LinearLayout>
